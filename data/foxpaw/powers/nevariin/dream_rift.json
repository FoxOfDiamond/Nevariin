{
    "name": "Dream rift",
    "description": "Spend 50% dream power to tear a hole in the boundary between worlds. Create a portal that lasts for 5 minutes that any entity can use to travel between the real and dream world. All entities coming through the portal can no longer regenerate hp. Players return to the rift location with max hp and don't lose items when killed. Only one can exist at a time.",
    "type": "origins:multiple",
    "badges": [{
        "type": "origins:tooltip",
        "sprite": "origins:textures/gui/badge/active.png",
        "text": {
            "text": "Secondary key"
        }
    }],
    "active": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": true
        },
        "entity_action": {
            "type": "origins:if_else_list",
            "actions": [{
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:nevariin/rotation_rotation",
                        "compare_to": 1,
                        "comparison": "!="
                    },
                    "action": {
                        "type": "origins:nothing"
                    }
                },
                {
                    "condition": {
                        "type": "origins:resource",
                        "compare_to": 0,
                        "comparison": ">",
                        "resource": "*:*_cooldown"
                    },
                    "action": {
                        "type": "origins:nothing"
                    }
                },
                {
                    "condition": {
                        "type": "origins:resource",
                        "compare_to": 500,
                        "comparison": "<",
                        "resource": "*:nevariin/dream_power_dream_bar"
                    },
                    "action": {
                        "type": "origins:nothing"
                    }
                },
                {
                    "condition": {
                        "inverted": true,
                        "type": "origins:on_block"
                    },
                    "action": {
                        "type": "apoli:nothing"
                    }
                },
                {
                    "condition": {
                        "type": "origins:resource",
                        "compare_to": 50,
                        "comparison": "==",
                        "resource": "*:nevariin/channel_secondary"
                    },
                    "action": {
                        "type": "origins:and",
                        "actions": [{
                                "type": "origins:change_resource",
                                "resource": "*:*_cooldown",
                                "change": 1000,
                                "operation": "set"
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:nevariin/dream_power_dream_bar",
                                "change": -500,
                                "operation": "add"
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:nevariin/channel_secondary",
                                "change": 0,
                                "operation": "set"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "/function foxpaw:nevariin/dream_rift/summon"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "/function foxpaw:nevariin/manifest/manifest"
                            }
                        ]
                    }
                },
                {
                    "action": {
                        "type": "origins:and",
                        "actions": [{
                                "type": "origins:change_resource",
                                "resource": "*:nevariin/channel_secondary",
                                "change": 1,
                                "operation": "add"
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:nevariin/channel_secondary_channeling",
                                "change": 5,
                                "operation": "set"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "/particle cloud ~ ~ ~ 0 0 0 0.3 5"
                            }
                        ]
                    },
                    "condition": {
                        "type": "origins:constant",
                        "value": true
                    }
                }
            ]
        },
        "cooldown": 1
    },
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "start_value": 0,
        "hud_render": {
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
            "bar_index": 13,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "compare_to": 0,
                "comparison": ">"
            }
        }
    },
    "release": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_cooldown",
                    "change": -1,
                    "operation": "add"
                }
            ]
        }
    }
}